# Images
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Which pool nginx treats as ACTIVE by default (blue or green)
ACTIVE_POOL=blue

# Release IDs exposed by apps
RELEASE_ID_BLUE=blue-v1
RELEASE_ID_GREEN=green-v1

# Host ports
BLUE_HOST_PORT=8081
GREEN_HOST_PORT=8082
NGINX_HOST_PORT=8080

# Internal app port (container port the image listens on; default 3000)
APP_PORT=3000
